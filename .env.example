# Azure AI Foundry Project
# Get this from AI Foundry portal > Your Project > Settings > Project endpoint
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project-id
AZURE_AI_MODEL_DEPLOYMENT_NAME=your-deployment-name

# Azure AI Vector Store (Optional - for RAG with File Search in AI Foundry)
# Get this from AI Foundry portal > Your Project > Vector stores
# If you don't have a vector store, you need to create one and upload your PDFs
AZURE_AI_VECTOR_STORE_ID=vs_your_vector_store_id

# Azure AI Search (Optional - for Local RAG with Semantic Kernel)
# Use this if you already have an Azure AI Search index with your documents
# This is an alternative to Vector Store that works locally
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your_search_api_key  # Optional if using Azure CLI auth
AZURE_SEARCH_INDEX_NAME=civic-bot-rag  # Your existing index name

# Azure OpenAI (for Agent Framework with Azure CLI authentication)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=your-deployment-name

# Azure Translator
TRANSLATOR_KEY=your_translator_key
TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
TRANSLATOR_REGION=your-region

# Azure Content Safety API
CONTENT_SAFETY_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
CONTENT_SAFETY_KEY=your_content_safety_key

# Bing Search (Optional - for web search and fact checking)
# Get this from Azure AI Foundry portal > Connected resources > Grounding with Bing Search
# Example: /subscriptions/{sub-id}/resourceGroups/{rg}/providers/Microsoft.CognitiveServices/accounts/{account}/connections/{connection-name}
BING_CONNECTION_ID=your_bing_connection_id

# Azure Cosmos DB (for storing citizen complaints/reports and user memory)
# Get this from Azure Portal > Your Cosmos DB account > Keys
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=your_primary_key_here  # Optional if using Azure CLI auth
COSMOS_DB_DATABASE_NAME=your_database_name
COSMOS_DB_CONTAINER_NAME=complaints  # Container for complaints
COSMOS_DB_MEMORY_CONTAINER_NAME=user_memory  # Container for user memory/conversations


# Application Settings
ENV=development
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
